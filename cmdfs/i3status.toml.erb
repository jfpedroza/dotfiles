#!/usr/bin/env -S erb -T 1
theme = "slick"
icons = "awesome5"

[[block]]
block = "music"
buttons = ["play", "next"]
interface_name_exclude = [".*kdeconnect.*", "mpd"]
hide_when_empty = true

[[block]]
block = "pacman"
format = "{pacman:1}|{aur:1}"
critical_updates_regex = "(linux|linux-lts|linux-zen)"
aur_command = "yay -Qua"
hide_when_uptodate = true

[[block]]
block = "memory"
display_type = "memory"
format_mem = "{mem_used:1;G}({mem_used_percents:1})"
format_swap = "{swap_used;_G*_B}/{swap_total;G}({swap_used_percents})"
<% if system("cat /proc/meminfo | grep SwapTotal | awk '$2 != 0 {exit 1}'") %>
clickable = false
<% end %>

[[block]]
block = "cpu"
interval = 1
format = "{utilization:1}"

[[block]]
block = "battery"
driver = "sysfs"
allow_missing = true
hide_missing = true

[[block]]
block = "notify"

[[block]]
block = "custom"
command = "i3_audio_status"
json = true
interval = 1

[[block]]
block = "sound"
step_width = 5

[[block]]
block = "time"
format = "%a %d/%m %I:%M %p"
on_click = "gsimplecal"
interval = 10
