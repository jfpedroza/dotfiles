#!/usr/bin/env -S erb -T 1
theme = "slick"
icons = "awesome"

[[block]]
block = "music"
# on_collapsed_click = "start_or_focus spotify Spotify"

[[block]]
block = "pacman"

[[block]]
block = "memory"
display_type = "memory"
format_mem = "{mem_used;G}({mem_used_percents})"
format_swap = "{swap_used;G}/{swap_total;G}({swap_used_percents})"

[[block]]
block = "cpu"
interval = 1
format = "{utilization} {frequency}"

<% if system("ls /sys/class/power_supply/*/capacity >/dev/null 2>&1") %>
[[block]]
block = "battery"
driver = "upower"
device = "DisplayDevice"
format = "{percentage}%"
<% end %>
